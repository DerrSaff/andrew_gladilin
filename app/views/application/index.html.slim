          = inline_svg('icons/databases.svg', class: 'specials-item__icon')
          figcaption = t('.databases')
      a.specials-item__title href=languages_path target='_blank'
        figure.specials-item
          = inline_svg('icons/languages.svg', class: 'specials-item__icon')
          figcaption = t('.languages')
      a.specials-item__title href=books_path target='_blank'
        figure.specials-item
          = inline_svg('icons/books.svg', class: 'specials-item__icon')
          figcaption = t('.books')
    .divider.divider_links
    .profiles.light-text
      h2.heading.heading_links = t('.profiles')
      p = t('.profiles_description')
      .profiles-icons
        a href='https://github.com/DerrSaff' target='_blank'
          = inline_svg('icons/github.svg', class: 'profiles__icon')
        a href='https://codefights.com/profile/andrewgladilin' target='_blank'
          = inline_svg('icons/codefights.svg', class: 'profiles__icon')
        a href='https://www.codecademy.com/AndrewGladilin' target='_blank'
          = inline_svg('icons/codecademy.svg', class: 'profiles__icon')
        a href='https://www.codewars.com/users/Andrew%20Gladilin' target='_blank'
          = image_tag('icons/codewars.png', class: 'profiles__icon')
        a href='https://www.freecodecamp.com/derrsaff' target='_blank'
          = inline_svg('icons/freecodecamp.svg', class: 'profiles__icon')
        a href='#' target='_blank'
          = inline_svg('icons/linkedin.svg', class: 'profiles__icon')

