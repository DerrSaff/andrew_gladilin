= form_for(post, html: {class: 'form'}) do |f|
  - if post.errors.any?
    .error_explanation
      h2 = pluralize(post.errors.count, "error")
        | prohibited this post from being saved:

      ul
      - post.errors.full_messages.each do |message|
        li = message

  / = f.label :header
  = f.text_field :header, class: 'text-input', placeholder: 'Header'
  
  = f.text_field :summary, class: 'textarea-input', placeholder: 'A post or the summary of an article'

  / = f.label :text
  = f.text_area :text, class: 'textarea-input', placeholder: 'Text of the post'

  = f.submit 'Post it', class: 'submit-button'
